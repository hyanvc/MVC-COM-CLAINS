<!DOCTYPE html>
<html>
<head>
    <title>Login Form</title>
    <script src="https://code.jquery.com/jquery-1.9.1.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <style>
        body {
            background-color: #265c50;
        }

        .card {
            background-color: #fff;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 1s ease-in-out, transform 1s ease-in-out;
        }
        .cortobotao {
            background-color: #265c50;
        }

            .card.show {
                opacity: 1;
                transform: translateY(0);
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height:100vh">
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <label>login</label>
                        <form action="" autocomplete="off">
                            <div class="form-group">
                                <label>Email:</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" name="username">
                            </div>
                            <div class="form-group">
                                <label>Senha:</label>
                                <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                            </div>
                            <button class="cortobotao" type="button" id="sendlogin" class="btn btn-primary">login</button>
                            <button type="button" class="cortobotao" id="aaa" class="btn btn-primary">Meu Curriculo</button>
                            <button type="button" class="cortobotao"  id="sms" class="btn btn-primary">Enviar SMS</button>
                            <a href="https://www.linkedin.com/in/hyanvc/" target="_blank"><button class="cortobotao" type="button" id="aaa" class="btn btn-primary">Linkedin</button></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $('#exampleInputPassword1').keypress(function (event) {
            if (event.keyCode === 13) { // código da tecla "Enter"
                var senha = $("#exampleInputPassword1").val();
                var email = $("#exampleInputEmail1").val();
                var bb = "Hyan";

                $.ajax({
                    url: "https://localhost:7237/Login/Login",
                    data: { "PassWord": senha, "EMAIL": email },
                    type: 'POST'
                })
                    .done(function (data) {
                        window.location.href = "https://localhost:7237";
                    });
            }
        });

        // Adiciona a classe "show" para animar o formulário de login
        $(document).ready(function () {
            $('.card').addClass('show');
        });
    </script>
</body>
</html>
